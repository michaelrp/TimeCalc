@inject ILocalStorage Store

@if(WcaInfo != null)
{
    <div class="media mt-1 mb-2">
        @if(!string.IsNullOrEmpty(WcaInfo.AvatarUrl))
        {
            <img class="avatar mr-1 rounded" src="@WcaInfo.AvatarUrl">
        }
        else
        {
            <img class="avatar mr-1 rounded" src="img/missing_avatar_thumb.png">
        }
        @if(!string.IsNullOrEmpty(WcaInfo.Name))
        {
            <div class="media-body ml-1">
                <div>
                    <h5 class="mt-0">@WcaInfo.Name</h5>
                </div>
                <div><a target="_blank" href="https://www.worldcubeassociation.org/persons/@(WcaInfo.WcaId)">@WcaInfo.WcaId <small><span class="oi oi-external-link"></span></small></a></div>
            </div>
        }
    </div>
}

@code {
    [Parameter]
    public WcaInfo WcaInfo { get; set; }
    [Parameter]
    public EventCallback<WcaInfo> WcaInfoChanged { get; set; }
}